<%= render 'shared/errors', obj: @article %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <label for= "form-control" class="offset-md-1 col-md-1"><%= f.label :title %></label>
    <div class="col-md-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Tite of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <label for="form-control" class="offset-md-1 col-md-1"><%= f.label :description %></label>
    <div class="col-md-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="btn form-control" class="col-sm-2"></label>
      <div class="col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
  </div>
<% end %>
<div class="form-group row">
  <label for="cancel"></label>
    <div class="cancel offset-md-4 col-md-6">
      [ <%= link_to "Cancel request and return to articles listings baby", articles_path %> ]
    </div>
</div>