<% if @article.errors.any? %>
<h2>The following erros prevented the article from getting created:</h2>
<ul>  
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>  
<% end %>


<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <label for= "form-control" class="col-sm-2 col-form-label"><%= f.label :title %></label>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Tite of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <label for="form-control" class="col-sm-2 col-form-label"><%= f.label :description %></label>
    <div class="col-sm-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row">
    <label for='btn' class="col-sm-2"></label>
      <div class="col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
  </div>
<% end %>
<div class="form-group row">
  <label for='cancel' class="col-sm-4"></label>
    <div class="cancel col-sm-6">
      [ <%= link_to "Cancel request and return to articles listings baby", articles_path %> ]
    </div>
</div