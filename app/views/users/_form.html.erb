<%= render 'shared/errors', obj: @user %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <label for= "form-control" class="offset-md-1 col-md-1"><%= f.label :username %></label>
    <div class="col-md-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <label for="form-control" class="offset-md-1 col-md-1"><%= f.label :email %></label>
    <div class="col-md-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
    <div class="form-group row">
    <label for="form-control" class="offset-md-1 col-md-1"><%= f.label :password %></label>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="btn form-control" class="col-sm-2"></label>
      <div class="col-sm-8">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
      </div>
  </div>
<% end %>
<div class="form-group row">
  <label for="cancel"></label>
    <div class="cancel offset-md-4 col-md-6">
      [ <%= link_to "Cancel request and return to articles listings baby", articles_path %> ]
    </div>
</div>